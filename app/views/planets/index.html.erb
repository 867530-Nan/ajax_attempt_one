<h1 class="center">Planets</h1>
<hr />
<div class="row">
	<div class="col s12 m6">
	<button class="btn" id="toggle">Show Form</button>
		<ul id="planets-list">
			<% @planets.each do |planet| %>
			<h6 
				class="planet-item" 
					data-id=<%=planet.id%> 
					data-name="<%= planet.name %>"
			>
				Planet Name: <%= planet.name %>
			</h6>
				<p class="planet-item description" data-id=<%=planet.id%> data-name="<% planet.name %>"
			>
				Planet Description: <%= planet.description %>
			</p>
			<% end %>
		</ul>
		<%= will_paginate @posts %>
	</div>
	<div class="row s12 m6" id="location-list">
		<h3 id="planet">Locations around the Planet</h3>
		<ul id="locations"></ul>
	</div>
</div>